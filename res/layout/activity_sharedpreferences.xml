<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="key:"/>

    <EditText
            android:id="@+id/etSharedKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="value:"/>

    <EditText
            android:id="@+id/etSharedValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/btnSharedPut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="put"/>

        <Button
                android:id="@+id/btnSharedRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="remove"/>

        <Button
                android:id="@+id/btnSharedGet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="get"/>

        <Button
                android:id="@+id/btnSharedQuery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="query"/>
    </LinearLayout>

    <ListView
            android:id="@+id/lvSharedData"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
    </ListView>

</LinearLayout>